{
   "name": "@luda/api",
   "version": "1.0.0",
   "private": true,
   "exports": {
      ".": "./src/index.ts",
      "./trpc/*": "./src/trpc/*",
      "./types": "./src/types/index.ts"
   },
   "scripts": {
      "start": "NODE_ENV=production pnpm with-env bun src/server.ts",
      "pm2:start": "pnpm pm2:delete &&  pm2 start \"bun run start\" --name @luda/server",
      "pm2:delete": "pm2 delete all &",
      "pm2:logs": "pm2 logs",
      "clean": "git clean -xdf node_modules",
      "db:generate": "pnpm with-env prisma generate --schema ./src/db/prisma/schema.prisma",
      "db:push": "pnpm with-env prisma db push --schema ./src/db/prisma/schema.prisma",
      "dev": "pnpm with-env bun --hot run src/server.ts",
      "lint": "eslint .",
      "lint:fix": "eslint . --fix",
      "ts:check": "tsc -b",
      "with-env": "dotenv -e ../../.env --",
      "check": "pnpm lint && pnpm ts:check",
      "build": "pnpm with-env NODE_ENV=production bun build src/server.ts",
      "test:unit": "vitest .unit.test.ts",
      "test:unit:run": "pnpm test:unit --run",
      "test:integration": "vitest .integration.test.ts",
      "test:integration:run": "pnpm test:integration --run",
      "test:e2e": "vitest .e2e.test.ts",
      "test:e2e:run": "pnpm test:e2e --run",
      "test:coverage": "pnpm pm2:start && vitest run --coverage && pnpm pm2:delete",
      "test:coverage:preview": "pnpm test:coverage && vite preview --outDir ./coverage --open"
   },
   "dependencies": {
      "@hono/trpc-server": "^0.3.2",
      "@lucia-auth/adapter-postgresql": "^3.1.2",
      "@trpc/client": "^10.29.1",
      "@trpc/server": "^10.29.1",
      "hono": "^4.5.3",
      "jose": "^5.6.3",
      "kysely": "^0.27.4",
      "lucia": "^3.2.0",
      "nanoid": "^5.0.7",
      "pg": "^8.12.0",
      "prisma-kysely": "^1.8.0",
      "zod": "^3.21.4"
   },
   "devDependencies": {
      "@luda/config": "workspace:*",
      "@luda/tsconfig": "workspace:*",
      "@swc/core": "^1.3.62",
      "@trivago/prettier-plugin-sort-imports": "^4.2.0",
      "@types/fs-extra": "^11.0.1",
      "@types/module-alias": "^2.0.1",
      "@types/node": "^18.16.17",
      "@types/pg": "^8.11.6",
      "@vitest/coverage-istanbul": "^0.34.1",
      "bun-types": "^1.1.21",
      "cross-env": "^7.0.3",
      "dotenv": "^16.1.4",
      "dotenv-cli": "^7.4.2",
      "envalid": "^7.3.1",
      "fs-extra": "^11.1.1",
      "module-alias": "^2.2.3",
      "pm2": "^5.3.0",
      "prisma": "^5.17.0",
      "ts-node": "^10.9.1",
      "typescript": "^5.4.5"
   }
}
